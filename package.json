{
  "name": "checkweather-sg",
  "version": "1.0.0",
  "description": "Yet another weather app for Singapore",
  "main": "index.html",
  "scripts": {
    "parcel": "parcel",
    "start": "parcel index.html -d tmp --no-hmr",
    "build": "rm -rf dist && parcel build index.html --no-cache",
    "build-prod": "npm run build && cpy {CNAME,favicon.ico} dist",
    "deploy": "npm run build-prod && gh-pages -d dist"
  },
  "keywords": [
    "weather",
    "rain",
    "rainfall",
    "singapore",
    "map"
  ],
  "author": "Lim Chee Aun",
  "license": "MIT",
  "dependencies": {
    "@turf/helpers": "~6.1.4",
    "d3-contour": "~1.3.2",
    "firebase": "~7.12.0",
    "nano-memoize": "~1.1.10",
    "preact": "~10.3.4",
    "react-sparkline-svg": "~1.0.2",
    "react-use": "~13.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "~7.9.1",
    "autoprefixer": "~9.7.4",
    "cpy-cli": "~3.1.0",
    "gh-pages": "~2.2.0",
    "parcel-bundler": "~1.12.4",
    "parcel-plugin-static-files-copy": "~2.3.1",
    "postcss-import-url": "~5.0.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "mini",
        "staticOutDir": "mini"
      }
    ],
    "watcherGlob": "**",
    "excludeGlob": "!(index.html)"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
