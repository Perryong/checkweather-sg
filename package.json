{
  "name": "checkweather-sg",
  "version": "1.0.0",
  "description": "Yet another weather app for Singapore",
  "main": "index.html",
  "scripts": {
    "parcel": "parcel",
    "start": "parcel index.html -d tmp --no-hmr",
    "build": "rm -rf dist && parcel build index.html --no-cache",
    "build-prod": "npm run build && cpy {CNAME,favicon.ico} dist",
    "deploy": "npm run build-prod && gh-pages -d dist"
  },
  "keywords": [
    "weather",
    "rain",
    "rainfall",
    "singapore",
    "map"
  ],
  "author": "Lim Chee Aun",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "cpy-cli": "~3.0.0",
    "gh-pages": "~2.2.0",
    "parcel-bundler": "~1.12.4",
    "parcel-plugin-static-files-copy": "~2.3.1",
    "postcss-import-url": "^4.0.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "mini",
        "staticOutDir": "mini"
      }
    ],
    "watcherGlob": "**",
    "excludeGlob": "!(index.html)"
  }
}
